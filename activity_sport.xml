<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2E0FB"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button6"
        android:layout_width="411dp"
        android:layout_height="103dp"
        android:text="SPORT"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="338dp"
        android:layout_height="125dp"
        android:text="Halep, după triumful cu Sorana: „Am încercat să tratez acest meci ca oricare altul!“"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.616"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        app:layout_constraintVertical_bias="0.532" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="380dp"
        android:layout_height="197dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button6"
        app:layout_constraintVertical_bias="0.192"
        app:srcCompat="@drawable/halep" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="382dp"
        android:layout_height="184dp"
        android:text="Simona Halep a făcut spectacol, marți seară, după ce a învins-o pe Sorana Cîrstea în optimi la Indian Wells și a egalat la 2 scorul meciurilor directe cu sportiva din Târgoviște. Simona Halep a mulțumit Divinității și la finalul partidei cu Sorana Cîrstea, cu același sărut suflat pe cer cu care ne-a obișnuit! Gestul emoționant al Simonei arată cât de important a fost pentru ea să o
        învingă pe Sorana și să rămână „racheta” numărul 1 a României."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.235" />
</androidx.constraintlayout.widget.ConstraintLayout>